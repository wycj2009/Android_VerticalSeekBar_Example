<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.android_verticalseekbar_example.VerticalSeekBar
        android:id="@+id/vertical_seek_bar"
        android:layout_width="25dp"
        android:layout_height="0dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:max="100"
        app:min="0"
        app:progress="0"
        app:thumb="@drawable/thumb"
        app:thumbPaddingBottom="0dp"
        app:thumbPaddingLeft="0dp"
        app:thumbPaddingRight="0dp"
        app:thumbPaddingTop="0dp"
        app:track="@drawable/track"
        app:trackPaddingLeft="0dp"
        app:trackPaddingRight="0dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
